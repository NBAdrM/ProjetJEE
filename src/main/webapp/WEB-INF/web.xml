<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- Page d'accueil -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

    <!-- AdminServlet -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>

    <!-- AuthServlet -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.AuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/authServlet</url-pattern>
    </servlet-mapping>

    <!-- CourseServlet -->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.CourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>

    <!-- EnrollmentServlet -->
    <servlet>
        <servlet-name>EnrollmentServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.EnrollmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EnrollmentServlet</servlet-name>
        <url-pattern>/enrollment</url-pattern>
    </servlet-mapping>

    <!-- GradeServlet -->
    <servlet>
        <servlet-name>GradeServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.GradeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GradeServlet</servlet-name>
        <url-pattern>/grade</url-pattern>
    </servlet-mapping>

    <!-- HomeServlet -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- StudentServlet -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.StudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <!-- TeacherServlet -->
    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>com.example.projetjee.controllers.TeacherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>

</web-app>

